<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="A Brown Wolf Studio Initiative! Simple and clean frontend for News API." />
    <meta itemProp="name" content="Brownies" />
    <meta itemProp="description" content="A Brown Wolf Studio Initiative! Simple and clean frontend for News API." />
    <meta itemProp="image" content="@($"{Context.Request.Scheme}://{Context.Request.Host}")/res/BWS.png" />
    <meta property="og:url" content="@($"{Context.Request.Scheme}://{Context.Request.Host}")" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Brownies" />
    <meta property="og:description" content="A Brown Wolf Studio Initiative! Simple and clean frontend for News API." />
    <meta property="og:image" content="@($"{Context.Request.Scheme}://{Context.Request.Host}")/res/BWS.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Brownies" />
    <meta name="twitter:description" content="A Brown Wolf Studio Initiative! Simple and clean frontend for News API." />


    <title>@ViewData["Title"]</title>

    <environment include="Development">
        <link href="~/lib/materialize/css/materialize.min.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    </environment>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav>
        <div class="nav-wrapper deep-purple">
            <a asp-area="" asp-route="HomePage" class="brand-logo ml-10 left">Brownies</a>
            <ul class="right">
                <li><a class="white deep-purple-text waves-effect waves-light btn" href="https://ko-fi.com/thebinaryguy" target="_blank">Buy me a Ko-fi<i class="material-icons right">sentiment_very_satisfied</i></a></li>
            </ul>
        </div>
    </nav>

    <h1 style="display: none;">Brownies</h1>

    <main>
        <div class="row">
            <form class="input-field col s12 searchContainer" asp-controller="Home" asp-action="Search" method="get">
                <input type="text" name="q" value="@Model.Query">
                <label for="q">Search</label>
                <button class="btn searchBtn deep-purple" type="submit"><i class="material-icons">search</i></button>
            </form>
            @RenderBody()
        </div>
    </main>

    <partial name="FooterPartial" />

    <environment include="Development">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/materialize/js/materialize.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
                asp-fallback-src="~/lib/jquery/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=">
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    </environment>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
