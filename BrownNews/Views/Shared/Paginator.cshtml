@model HomeViewModel

@if (Model.Headlines.TotalResults > Model.PageSize)
{
    <div class="col s12 center">
        <ul class="pagination">
            @{
                int pages = HelperMethods.CalculatePagesForPagination(int.Parse(Model.Headlines.TotalResults.ToString()), Model.PageSize);
            }
            <li class="@(Model.Page == 1 ? "disabled" : "waves-effect")"><a asp-route-category="@Model.Category" asp-route-page="@(Model.Page-1)"><i class="material-icons">chevron_left</i></a></li>
            @for (int i = 1; i <= pages; i++)
            {
                <li class="waves-effect @(Model.Page == i ? "deep-purple active" : "")"><a asp-route-category="@Model.Category" asp-route-page="@i">@i.ToString()</a></li>
            }
            <li class="@(Model.Page == pages ? "disabled" : "waves-effect")"><a asp-route-category="@Model.Category" asp-route-page="@(Model.Page+1)"><i class="material-icons">chevron_right</i></a></li>
        </ul>
    </div>
}