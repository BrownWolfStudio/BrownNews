@model Headlines

@{
    ViewData["Title"] = "Brownies";
}

@if (Model != null)
{
    foreach (var article in Model.Articles)
    {
        string imgUri = article.UrlToImage?.HttpToHttps() ?? "/res/400x200.png";
        <div class="col s12 m6 l4">
            <div class="card large sticky-action hoverable">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" onerror="this.src='/res/400x200.png'" src="@imgUri">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">@article.Title<i class="material-icons right">more_vert</i></span>
                    <p>@article.PublishedAt.Humanize()</p>
                </div>
                <div class="card-action"><a href="@article.Url" target="_blank" class="deep-purple-text">Source</a></div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">@article.Title<i class="material-icons right">close</i></span>
                    <p>@article.Content.</p>
                </div>
            </div>
        </div>
    }
}